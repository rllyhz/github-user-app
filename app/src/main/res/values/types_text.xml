<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="ExpandedTitleTextHidden" parent="Theme.GithubUser">
        <item name="android:textSize">0sp</item>
        <item name="android:textColor">@android:color/transparent</item>
    </style>

    <style name="Headline1" parent="TextAppearance.AppCompat.Title">
        <item name="android:fontFamily">@font/poppins_bold</item>
    </style>

    <style name="Headline2" parent="TextAppearance.AppCompat.Small">
        <item name="android:fontFamily">@font/poppins_regular</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="ItemUserLarge" parent="TextAppearance.AppCompat.Large">
        <item name="android:fontFamily">@font/poppins_medium</item>
    </style>

    <style name="ItemUserSmall" parent="TextAppearance.AppCompat.Small">
        <item name="android:fontFamily">@font/poppins_regular</item>
    </style>

    <style name="ItemUserSmall.Ellipsize">
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">1</item>
        <item name="android:gravity">start</item>
        <item name="android:maxWidth">174dp</item>
        <item name="android:textColor">@color/grey</item>
    </style>
</resources>